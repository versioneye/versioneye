<div >
  <% @comments.each do |comment| %>
    <% comment_product = comment.product %>
    <div class="row search-item" >

      <% if comment_product %>

        <div class="span1" style="width:60px; text-align: left;">
          <%= render :partial => "/shared/language_icons", :locals => {:language => comment.language, :icon => nil, :link => "/#{comment_product.language_esc}/#{comment.prod_key_url}/#{comment.version_url}", :title => ":-)" } %>
        </div>

        <div class="span6" style="width: 505px;">
          <div class="row">
            <a href="/<%= comment_product.language_esc %>/<%= comment.prod_key_url %>/<%= comment.version_url %>"
               class="searchResultLink"><%= comment_product.name_and_version %></a><br/>
            <a href="/users/<%= comment.user.username %>">
              <span ><%= comment.user.fullname %></span>
            </a>
            at <b><%= comment.created_at.strftime("%b %d, %Y - %I:%m %p") %></b>
          </div>
          <div class="user_comment">
            <%= comment.comment %>
          </div>
          <div class="row">
            <div class="span2" >
              <a href="https://twitter.com/share"
                   class="twitter-share-button"
                   data-url="<%= Settings.server_url %>/vc/<%= comment.id %>"
                   data-text="<%= comment.user.fullname %> commented <%= comment_product.name_and_version %> @VersionEye read the #review here:"
                   data-count="horizontal" >Twitter</a>
              <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
            </div>
            <div class="span2">
              <%= render :partial => "shared/list_reply_link", :locals => { :comment => comment } %>
            </div>
          </div>
          <div class="row">
            <%= render :partial => "shared/version_comment_replies",
              :locals => {:comment => comment} %>
          </div>
        </div>

      <% end %>

    </div>
  <% end %>
</div>
