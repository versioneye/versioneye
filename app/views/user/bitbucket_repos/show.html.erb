<% title 'Bitbucket Repositories' %>

<div class="span3" >
  <%= render '/user/helpers/navi' %>
</div>


<div class="span8">
  <div class="row content_header_def" >
    Files for repository <b><%= @repo.fullname %></b>
  </div>
  <div class="span8 content" id="content"> . </div>
</div>
<script type="text/javascript">
  React.renderComponent(
    RepoFiles({url: "/user/projects/bitbucket/<%= @repo.fullname %>/files", scm: "bitbucket", pollInterval: 3000, repo_fullname: "<%= @repo.fullname %>" }),
    document.getElementById('content')
  );
</script>
