
<% user = nil %>
<% user = collaborator.user if collaborator[:active] %>


  <div style="vertical-align: middle">
    <div class = "col-md-2" style="width: 85px;">
      <%  if collaborator.owner?(current_user)  %>
        <%= render partial: 'user/projects/helpers/collaborator_owner_controls', locals: {collaborator: collaborator} %>
      <% elsif collaborator.current?(current_user) %>
        <%= render partial: 'user/projects/helpers/collaborator_controls', locals: {collaborator: collaborator} %>
      <% end %>
    </div>
    <div class = "col-md-1">
      <%= render partial: 'shared/gravatar', locals: {size: 48, show_link: false, user: user, classes: 'centered'} %>
    </div>
    <div class="col-md-8">
      <% if user %>
        <p>
          <strong> <%= user[:fullname] %></strong>
          <small>(<%= user[:username] %>)</small>
          added <%= time_ago_in_words(collaborator[:created_at]) %> ago.
        </p>
      <% else %>
        <p>
          User (<small> <%= collaborator[:invitation_email] %> </small>) doesn't exist. Invitation send out!
        <p>
      <% end %>
    </div>
  </div>

