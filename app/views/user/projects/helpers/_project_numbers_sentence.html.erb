<% if show_license_number && show_license_number == true && project.license_whitelist_id %> 
  <span style="color: <%= outdated_color(project) %>; font-size: 14px; font-weight: bold;" >
    <%= project[:licenses_red_sum] %>
  </span> violate the license whitelist.
<% end %> 
