<% title 'Packages I follow' %>

<div class="span3" >
  <%= render '/user/helpers/navi' %>
</div>

<div class="span8">

  <div class="row content_header_def" >
    <% if @products && !@products.empty? %>
      You follow <%= pluralize(@products.total_entries, 'software package') %> <a href="<%= url_for(favoritepackages_user_url( current_user )) %>.rss"><%= image_tag "rss.png", :title => "Subscribe via RSS", :alt => "Subscribe via RSS" %></a>
    <% else %>
      You follow 0 Software Packages
    <% end %>
  </div>
  <div class="span8 content" >
    <% if !@products.nil? && !@products.empty? %>
      <%= render :partial => "products/show_search_results_iterator", :locals => { :products => @products, :prefix => "user", :name_limit => 70 } %>
      <div style="margin-top: 20px; text-align: right;">
        <%= will_paginate @products %>
      </div>
    <% else %>
      <% if @popular_packages %>
        <p>
          <b>Why not following the most popular packages?</b>
        </p>
        <div style="padding-top: 20px;">
          <%= render :partial => "products/show_search_results_iterator", :locals => { :products => @popular_packages, :prefix => "user", :name_limit => 70 } %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
