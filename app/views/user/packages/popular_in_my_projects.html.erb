<% title 'Most Used Libraries' %>

<div class="span3" >
  <%= render '/user/helpers/navi' %>
</div>

<div class="span8">

  <div class="row content_header_def" >
    Most used packages over all your projects
  </div>
  <div class="span8 content" >
    <div id="projects" >
      <% @packages = @packages.sort_by {|item, project| -project.length} %>
      <% @packages.each do |lib_name, projects| %>
        <div class="row search-item" >
          <h5 class="dep_header"><%= lib_name %> (<%= projects.length %>)</h5>
          <p>
            <% projects.each do |project| %>
              <a href = "<%= user_project_path(project)  %>" style ="text-decoration:none;" >
                <span class = "label label-success"><%= project.name %></span>
              </a>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

</div>
