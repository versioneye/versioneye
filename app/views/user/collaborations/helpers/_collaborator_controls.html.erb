<%= button_to(
      'Remove',
      user_collaboration_delete_path(collaboration_id: collaboration[:_id].to_s),
      :confirm => 'Are you sure?',
      :class => 'btn btn-mini btn-danger'
    )
%>

<% if !collaboration[:active] %>
  <%= button_to(
        'Approve',
        user_collaboration_delete_path(collaboration_id: collaboration[:_id].to_s),
        :class => "btn btn-mini btn-primary"
      )
  %>
<% end %>
