
<div class="col-md-3" >
  <%= render 'organisations/navi' %>
</div>

<div class="col-md-9" >

  <div class="content_header_def" >
    License Whitelists
  </div>

  <div class="content" >

    <p>
      Create a license whitelist and assign it to your projects to ensure a license policy.
    </p>

    <p>
      </br>
      <%= form_for(:license_whitelist, :url => organisation_license_whitelists_path, :html => {:class => 'form-inline'} ) do |f|  %>
        <div class="form-group">
          <%= f.label :name, :class => 'control-label' %>
          <%= f.text_field :name, :class => "form-control" %>
          <button id="sign_in_button" type="submit" class="btn btn-big btn-primary" >Create New Whitelist</button>
        </div>
      <% end %>
    </p>

    <br/>
    <br/>

    <table>
      <colgroup>
        <col width="75px;" />
        <col width="120px;" />
        <col width="*" />
      </colgroup>

      <% @whitelists.each do |wlist| %>
        <% if !wlist.name.to_s.empty? %>

          <tr>
            <td>
              <%= form_tag( destroy_organisation_license_whitelist_path(@organisation, wlist) , :method => "post", :style => 'margin: 0;') do  %>
                <input id="name" name="name" type="hidden" value="<%= wlist.name.to_s %>" />
                <button type="submit" class="btn btn-danger" onClick="return confirmAction()" >Delete</button>
              <% end %>
            </td>
            <td>
              <% if wlist.default == false %>
                <%= form_tag( default_organisation_license_whitelist_path(@organisation.name, :id => wlist.name.to_s) , :method => "post", :style => 'margin: 0;') do %>
                  <button type="submit" class="btn btn-success" >Make Default</button>
                <% end %>
              <% else %>
                <span class="label label-success" >DEFAULT</span>
              <% end %>
            </td>
            <td>
              <%= link_to wlist.name, organisation_license_whitelist_path(@organisation, wlist) %>
            </td>
          </tr>

        <% end %>
      <% end %>

    </table>

  </div>

</div>
