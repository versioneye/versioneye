<div id= "decline_form_<%= @form_index %>" class= "hide admin-form" >
  <h5> Decline url </h5>

  <%= form_tag(admin_submitted_url_decline_path(@submitted_url), :class => 'form-horizontal') do %>

    <div class = "form-group">
      <%= label_tag :url,nil, :class => 'control-label' %>
      <div class = "controls">
        <%= text_field_tag :url, @submitted_url.url, :class => 'form-control', :readonly => true %>
      </div>
    </div>

    <div class = "form-group">
      <%= label_tag :declined_message, nil, :class => "control-label" %>
      <div class = "controls">
        <%= text_area_tag :declined_message, nil, :size=>"27x4", :class => "form-control" %>
      </div>
    </div>

    <div class = "form-group">
      <div class = "controls">
        <button type="button" class="btn" onclick="jQuery('.admin-form').addClass('hide')">Cancel</button>
        <%= submit_tag "Decline", :class => "btn btn-danger" %>
      </div>
    </div>

  <% end %>

</div>
