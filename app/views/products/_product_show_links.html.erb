<% merged_links  = @product.http_version_links_combined  %>

<% if !merged_links.empty? %>
  <% hash = Hash.new %>
  <% merged_links.each do |link| %>
    <% hash[link.link] = link.name %>
  <% end %>
  <div class="box header">
    <h3 class="side_header">
      <%= pluralize( hash.count, "Link" ) %>
    </h3>
  </div>
  <div class="box content">
    <% hash.each do |key, value| %>
      <a href="<%= key %>" target="new"><%= value %></a><br/>
    <% end %>
  </div>
<% else %>
  <div class="box header"><h3 class="side_header">0 Links</h3></div>
<% end %>

<% if @product.twitter_name && !@product.twitter_name.empty? %>
  <div class="box content" id="relatedLinks" style="padding-top: 10px;" >
    <a href="https://twitter.com/<%= @product.twitter_name %>" target="twitter" >Twitter Page</a>
  </div>
<% end %>
