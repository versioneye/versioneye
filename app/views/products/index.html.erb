<section id="search_section" class="container" style="padding-bottom: 65px;" >
  <div id="search_bar" style="text-align: center;" >

    <form id="form" action="/search" method="GET" style="padding: 0; margin:0;" >
      <div class = "input-append">
        <input id = "q" name = "q" class = "span7 input-huge" type = "text" />
        <button class = "btn btn-primary btn-huge" type = "submit" >
          <i class = "icon-search icon-white"></i>
          &nbsp;Search
        </button>
      </div>
    </form>

  </div>
  <div id="headline_2" class="jumbotron" style="margin-top: 10px;">
    <div class="row" style="text-align: center; vertical-align: middle;">
      <% if !@languages.nil? && !@languages.empty? && !@lang.nil? %>
          <% @langs = @lang.split(",") %>
          <% @languages.each do |language| %>
            <% langname = language.downcase.gsub(/\./, "") %>
            <div class="icon_<%= langname %>_small_container" >
              <span id="icon_<%= langname %>" class="icon_<%= langname %> small on" title="<%= langname %>">&nbsp;</span>
            </div>
          <% end %>
      <% end %>
    </div>
  </div>
</section>

