
<% title 'References' %>

<div class="span3">

  <% if !signed_in? %>
    <%= render '/shared/github_ad' %>
  <% end %>

</div>

<div class="span8" >
  <div class="row content_header_def" >
    <em> `<%= @product.name %>`</em> has <%= pluralize( @products.total_entries , "reference")  %>
  </div>
  <div class="content">
    <%= render :partial => "products/show_search_results",
               :locals => { :products => @products, :paginate => true, :prefix => "references", :name_limit => 70 }  %>
  </div>
</div>
