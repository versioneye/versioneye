<% if @product.tags && @product.tags.is_a?(Array) && !@product.tags.empty? %>

  <h2 class="section_header"> Keywords </h2>

  <div style="margin-bottom: 20px;" >
    <p>
      <% @product.tags.each do |tag| %>
        <span class="label label-default keyword_tag"><%= link_to tag, keyword_path(tag) %></span>
      <% end %>
    </p>
  </div>

<% end %>
