<h2 class="section_header">Bower</h2>
<div class = "well" >

  <div class="row" style="margin-bottom: 5px;">
    <div class="span2">
      <h5 class="dep_header">Bower install</h5>
    </div>
    <div class="span5" style="width: 430px; margin-bottom: 0;">
      <pre class = "prettyprint" style="background-color: #fff; margin-bottom: 0;"><code>
bower install <%= @product.name %>#<%= @version.to_s %>
      </code></pre>
    </div>
  </div>

  <div class="row" style="margin-bottom: 5px;">
    <div class="span2">
      <h5 class="dep_header">bower.json</h5>
    </div>
    <div class="span5" style="width: 430px; margin-bottom: 0;">
      <pre class = "prettyprint" style="background-color: #fff; margin-bottom: 0;"><code>
"<%= @product.name %>": "<%= @version.to_s %>"
      </code></pre>
    </div>
  </div>

  <% downloads = Versionarchive.archives( @product.language, @product.prod_key, @version.to_s ) %>
  <% if !downloads.nil? && !downloads.empty? %>
    <div class="row" style="margin-bottom: 5px;" >
      <div class="span2" >
        <h5 class="dep_header">Download</h5>
      </div>
      <div class="span5 download_area" style="width: 409px;" >
        <% downloads.each do |download|  %>
          <a title="<%= download.name %> download" href="<%= download.link %>"><%= download.name %></a>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row" style="margin-bottom: 5px;">
    <div class="span2">

    </div>
    <div class="span5" style="width: 430px; margin-bottom: 0;">
      <%= render "products/helpers/notify_me" %>
    </div>
  </div>

</div>
