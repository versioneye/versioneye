<div class="well box_dep">

<% main_dependencies = @product.dependencies(nil) %>

<div class="row">
  <div class="span6">
    <h5 class="dep_header">
      <%= pluralize( main_dependencies.count, 'Require Dependencies') %>
    </h5>
  </div>
  <div class="span7" >
    <% if !main_dependencies.empty? %>
      <%= render :partial => "products/helpers/dependency_table", :locals => { :dependencies => main_dependencies }  %>
    <% end %>
  </div>
</div>

<% require_deps = @product.dependencies("require-dev") %>
<% if require_deps.count > 0 %>
  <hr/>
  <h5 class="dep_header">
    <%= pluralize(require_deps.count, "Require Dev Dependencies") %>
  </h5>
  <%= render :partial => "products/helpers/dependency_table", :locals => { :dependencies => require_deps }  %>
<% end %>

<% replace_deps = @product.dependencies("replace") %>
<% if replace_deps.count > 0 %>
  <hr />
  <h5 class="dep_header">
    <%= pluralize(replace_deps.count, "Replace Dependencies") %>
  </h5>
  <%= render :partial => "products/helpers/dependency_table", :locals => { :dependencies => replace_deps }  %>
<% end %>
</div>
