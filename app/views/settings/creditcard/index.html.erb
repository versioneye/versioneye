
<div class="span3" >
  <%= render 'settings/navi' %>
</div>

<div class="span8" >

  <div class="row content_header_def" >
    Credit Card Information
  </div>

  <div class="span8 content" >

    <p >
      <a href="https://stripe.com" target="stripe">Stripe.com</a> is our Payment Provider.
      <b>VersionEye doesn't store any Credit Card data.</b>
    </p>
    <div>
      <%= image_tag "ccs.png" %>
    </div>

    <hr />

    <%= form_tag(settings_update_creditcard_path, :method => "post", :class => "form-horizontal", :id => "payment-form") do %>

      <input type="hidden" name="plan" id="plan" value="<%= @plan_name_id %>" />

      <div class="control-group">
        <%= label_tag :name, "Name", :class => "control-label-big", :for => "name" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="round" id="name" name="name" value="<%= @billing_address.name %>" /> *
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :name, "Company", :class => "control-label-big", :for => "company" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="round" id="company" name="company" value="<%= @billing_address.company %>" />
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :street, "Street", :class => "control-label-big", :for => "street" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="round" id="street" name="street" value="<%= @billing_address.street %>" /> *
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :zip_code, "Zip / City", :class => "control-label-big", :for => "zip_code" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="round" id="zip_code" name="zip_code" style="width: 40px;" value="<%= @billing_address.zip %>" /> / <input type="text" size="20" autocomplete="off" class="round" id="city" name="city" style="width: 140px;" value="<%= @billing_address.city %>" /> *
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :country, "Country", :class => "control-label-big", :for => "country" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="round" id="country" name="country" value="<%= @billing_address.country %>" /> *
        </div>
      </div>

      <hr />

      <div class="control-group">
        <%= label_tag :card_number, "Card Number", :class => "control-label-big", :for => "cardnumber" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="20" autocomplete="off" class="card-number round" id="cardnumber"/>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :cvc, "CVC", :class => "control-label-big", :for => "cvc" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="4" autocomplete="off" class="card-cvc round" style="width: 60px;" id="cvc"/>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :Expiration, "Expiration (MM/YYYY)", :class => "control-label-big", :for => "Expiration" %>
        <div class="controls" style="margin-left: 155px;">
          <input type="text" size="2" class="card-expiry-month round" style="width: 40px;" id="month" />
          <span> / </span>
          <input type="text" size="4" class="card-expiry-year round" style="width: 60px;" id="year" />
        </div>
      </div>

      <div class="control-group">
        <div class="control-label-big"></div>
        <div class="controls" style="margin-left: 155px;">
          <button type="submit" class="btn btn-large btn-primary"  >Save</button>
        </div>
      </div>

    <% end %>

  </div>
</div>
