
<div class="col-md-3 navbar_container" >
  <%= render 'settings/navi' %>
</div>

<div class="col-md-9" >

  <div class="content_header_def" >
    GitHub Settings
  </div>

  <div class="content" >

    <%= form_tag( settings_githubsettings_path, :method => "post", :class => "form-horizontal") do  %>

      <p class="description">
        If you are using <a href="https://enterprise.github.com/">GitHub Enterprise</a> you can configure it here.
        Please use
        <pre class="prettyprint">http://VERSIONEYE_DOMAIN/auth/github/callback</pre><br/>
        as callback URL in GitHub Enterprise and
        replace "VERSIONEYE_DOMAIN" with the IP address or domain under which your VersionEye Enterprise instance
        is reachable.<br/><br/>
      </p>

      <div class="form-group">
        <%= label_tag :github_base_url, "WEB URL", :class => "control-label", :for => "github_base_url" %>
        <div class="controls">
          <%= text_field_tag :github_base_url, @globalsetting['github_base_url'], :id => "github_base_url", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :github_api_url, "API URL", :class => "control-label", :for => "github_api_url" %>
        <div class="controls">
          <%= text_field_tag :github_api_url, @globalsetting['github_api_url'], :id => "github_api_url", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :github_client_id, "Client ID", :class => "control-label", :for => "github_client_id" %>
        <div class="controls">
          <%= text_field_tag :github_client_id, @globalsetting['github_client_id'], :id => "github_client_id", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :github_client_secret, "Client Secret", :class => "control-label", :for => "github_client_secret" %>
        <div class="controls">
          <%= text_field_tag :github_client_secret, @globalsetting['github_client_secret'], :id => "github_client_secret", :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label"></div>
        <div class="controls">
          <button type="submit" class="btn btn-large btn-primary" >Save</button>
        </div>
      </div>

    <% end %>

  </div>
</div>
