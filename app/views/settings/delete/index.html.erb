
<div class="col-md-3" >
  <%= render 'settings/navi' %>
</div>

<div class="col-md-9" >

  <div class="content_header_def" >
    Here you can delete this Account
  </div>

  <div class="content" >

    <div style="margin-bottom: 20px; text-align: center;">
      <%= image_tag "dont_go_cat.jpg", :class => "round12", :style => "width: 90%" %>
    </div>

    <%= form_tag(settings_destroy_path, :method => "post", :class => "form-horizontal") do  %>

      <div class="form-group">
        <%= label_tag :why, "Why?", :class => "control-label", :for => "why" %>
        <div class="controls">
          <%= text_area_tag :why, "", :id => "why", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password", :class => "control-label", :for => "password" %>
        <div class="controls">
          <%= password_field_tag :password, "", :id => "password", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="controls" style="">
          <%= link_to "I need a new password", iforgotmypassword_path %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label"></div>
        <div class="controls">
          <button type="submit" class="btn btn-danger" >Delete this Account</button>
        </div>
      </div>

    <% end %>

  </div>
</div>
