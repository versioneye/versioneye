<div id = "top-products-container" class = "media">
  <h2 class="section_header"> Most followed libraries </h2>
  <% @top_products.each_with_index do |prod, i| %>
    <div class="prod-item">
      <div>
        <span class="product_page_sm_header">
          <%= i + 1 %>. <a href = "<%= products_path(lang: prod.language_esc, key: prod.to_param) %>"><%= prod.name %></a>
        </span>
      </div>
      <div>
        <%= prod.short_summary %> <br/>
      </div>
      <div>
        <span> Followers: <%= prod.followers %> </span> | 
        License: <span class="bold"><%= prod.license_info %> </span>
      </div>
    </div>
  <% end %>
</div>
