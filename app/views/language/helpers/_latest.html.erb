<div id = "latest-products-container" class = "media">
  <h2 class="section_header"> Currently updated libraries </h2>
  <% @latest_products.each_with_index do |latest_prod, i| %>
    <% if latest_prod && latest_prod.product %>
      <% prod = latest_prod.product %>
      <div class = "media-body product-item">
        <h5 class = "media-heading">
           <%= i + 1 %>. <a href = "<%= products_path(lang: prod.language_esc, key: prod.to_param) %>">
                          <%= prod.name %>
                        </a>
          <span class = "pull-right">
            <%= render partial: "shared/product_follow_mini", locals: {product: prod, user: current_user} %>
          </span>
        </h5>
        <p> <%= prod.short_summary %> </p>
      </div>
    <% end %>
  <% end %>
</div>
