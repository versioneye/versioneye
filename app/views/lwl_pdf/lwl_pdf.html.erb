<html>
  <head>
    <meta name='pdfkit-orientation' content='portrait' />

    <style type="text/css">
      body {
        color: #000000;
        font-family: Courier;
        font-size: 12px;
      }
      body, td, th, input, textarea, select, a {
        font-size: 12px;
      }
      h1{
        font-family: Courier;
      }
      p {
        margin-top: 0px;
        margin-bottom: 20px;
      }
      #container {
        width: 700px;
      }
      table.list {
        border-collapse: collapse;
        width: 100%;
        border-top: 1px solid #DDDDDD;
        border-left: 1px solid #DDDDDD;
        margin-bottom: 20px;
      }
      table.list td {
        border-right: 1px solid #DDDDDD;
        border-bottom: 1px solid #DDDDDD;
      }
      table.list thead td {
        background-color: #EFEFEF;
        padding: 0px 5px;
      }
      table.list thead td a, .list thead td {
        text-decoration: none;
        color: #222222;
        font-weight: bold;
      }
      table.list tbody td a {
        text-decoration: underline;
      }
      table.list tbody td {
        vertical-align: top;
        padding: 0px 5px;
      }
      table.list .left {
        text-align: left;
        padding: 7px;
      }
      table.list .right {
        text-align: right;
        padding: 7px;
      }
      table.list .center {
        text-align: center;
        padding: 7px;
      }
      .small{
        font-size: 10px;
      }
      thead { display: table-header-group }
      tfoot { display: table-row-group }
      tr { page-break-inside: avoid }
    </style>
  </head>
  <body>
    <div class="container">

      <p>
        <b>Date:</b> <%= DateTime.now.strftime("%b %d, %Y - %H:%M") %> <br/>
      </p>

      <div>
        <p>
          <b>Project:</b> <%= project.name %> <span class="small">(<%= project.id.to_s %>)</span> <br/>
          <b>Bill of materials:</b>
        </p>

        <table class="list">
          <thead>
            <tr>
              <td class="left">Status</td>
              <td class="left">Component</td>
              <td class="left">Version</td>
              <td class="left">License</td>
            </tr>
          </thead>
          <tbody>
            <% [:whitelisted, :unknown, :violated].each do |key| %>
              <% text_color = 'black' %>
              <% text_color = 'orange' if key.to_s.eql?('unknown') %>
              <% text_color = 'red'    if key.to_s.eql?('violated') %>
              <% project.lwl_pdf_list[key].each do |dep| %>
                <tr>
                  <td class="left" style="color: <%= text_color %> "> <%= key.to_s %> </td>
                  <td class="left" style="color: <%= text_color %> ">
                    (<%= dep[:language] %>) <%= dep[:component] %>
                    <% if dep[:group_id] %>
                      <br/> <span class='small'>GroupId: <%= dep[:group_id] %></span>
                    <% end %>
                  </td>
                  <td class="left" style="color: <%= text_color %> ">
                    <% if dep[:version].to_s.strip.match(/\A\:path/) %>
                      :path
                    <% elsif dep[:version].to_s.strip.match(/\A\:git/) %>
                      :git
                    <% else %>
                      <%= dep[:version].to_s.strip %>
                    <% end %>
                  </td>
                  <td class="left" style="color: <%= text_color %> ">
                    <% if !dep[:license_url].to_s.empty? %>
                      <a href="<%= dep[:license_url].to_s %>"><span style="color: <%= text_color %>"><%= dep[:license] %></span></a>
                    <% else %>
                      <span style="color: <%= text_color %>"><%= dep[:license] %></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if children && !children.empty? %>
        <% children.each do |project| %>
          <div>
            <p>
              <b>Project:</b> <%= project.name %> <span class="small">(<%= project.id.to_s %>)</span> <br/>
              <b>Bill of materials:</b>
            </p>

            <table class="list">
              <thead>
                <tr>
                  <td class="left">Status</td>
                  <td class="left">Component</td>
                  <td class="left">Version</td>
                  <td class="left">License</td>
                </tr>
              </thead>
              <tbody>
                <% [:whitelisted, :unknown, :violated].each do |key| %>
                  <% text_color = 'black' %>
                  <% text_color = 'orange' if key.to_s.eql?('unknown') %>
                  <% text_color = 'red'    if key.to_s.eql?('violated') %>
                  <% project.lwl_pdf_list[key].each do |dep| %>
                    <tr>
                      <td class="left" style="color: <%= text_color %> "> <%= key.to_s %> </td>
                      <td class="left" style="color: <%= text_color %> ">
                        (<%= dep[:language] %>) <%= dep[:component] %>
                        <% if dep[:group_id] %>
                          <br/> <span class='small'>GroupId: <%= dep[:group_id] %></span>
                        <% end %>
                      </td>
                      <td class="left" style="color: <%= text_color %> ">
                        <% if dep[:version].to_s.strip.match(/\A\:path/) %>
                          :path
                        <% elsif dep[:version].to_s.strip.match(/\A\:git/) %>
                          :git
                        <% else %>
                          <%= dep[:version].to_s.strip %>
                        <% end %>
                      </td>
                      <td class="left" style="color: <%= text_color %> ">
                        <% if !dep[:license_url].to_s.empty? %>
                          <a href="<%= dep[:license_url].to_s %>"><span style="color: <%= text_color %>"><%= dep[:license] %></span></a>
                        <% else %>
                          <span style="color: <%= text_color %>"><%= dep[:license] %></span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      <% end %>

      <p>
        <b>License Whitelist:</b> <%= project.license_whitelist.name %> <span class="small">(<%= project.license_whitelist.id %>)</span></br>
        <b>Bill of materials:</b>
      </p>

      <p>
        <% project.license_whitelist.license_elements.each do |lwle| %>
          <div>- <%= lwle.name %> </div>
        <% end %>
      </p>

      <% if project.component_whitelist && !project.component_whitelist.components.empty? %>
        <p>
          <b>Component Whitelist:</b> <%= project.component_whitelist.name %> <span class="small">(<%= project.component_whitelist.id %>)</span></br>
          <b>Bill of materials:</b>
        </p>

        <p>
          <% project.component_whitelist.components.each do |component| %>
            <div>- <%= component %> </div>
          <% end %>
        </p>
      <% end %>

    </div>
  </body>
</html>
