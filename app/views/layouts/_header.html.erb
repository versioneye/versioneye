<header style="z-index: 100;">
  <div class="navbar navbar-static-top">
    <div class = "container row" >
      <div class="span4 brand-container" style="margin-left: 0; padding-left: 0; height: 50px;">
        <div style="margin-top: 15px;" class="pull-left">
          <a href="/" ><%= image_tag "logos/versioneye-transparent.png" %></a>
        </div>
        <span class="icon_beta" style="margin-left: 80px;"></span>
      </div>

      <div class = "span7 pull-right">
        <ul class="nav pull-right">
          <% if !signed_in? %>
            <li>
              <%= link_to "Pricing", "/pricing" %>
            </li>
          <% end %>
        <!-- menu for logged-in user -->
          <% if signed_in? %>
            <li class="divider-vertical"></li>
            <li>
              <%= link_to "Pricing", "/pricing" %>
            </li>
            <li class="divider-vertical"></li>
            <li>
              <%= link_to "Packages I follow",  :controller => 'user/packages', :action => "i_follow" %>
            </li>
            <li class="divider-vertical"></li>
            <li>
              <a href="/user/projects">
                My Projects
              </a>
            </li>
            <li class="divider-vertical"></li>
            <li class ="dropdown">
              <a class = "dropdown-toggle"
                data-toggle = "dropdown" href = "#">
                <span class = "img-profile32" style="zoom: 0.85"></span>
                 <%= current_user.fullname %>
                 <b class = "caret"></b>
              </a>
              <ul class = "dropdown-menu">
                <li >
                  <a href="/settings/profile">
                    Settings
                  </a>
                </li>
                <li>
                  <a href="/users/<%= current_user.username %>" >
                    Profile
                  </a>
                </li>
                <li>
                  <a href="/search?q=submit_new_resource_<%= rand(1000) %>">Submit New Resource</a>
                </li>
                <li>
                  <a href="JavaScript: load_dialog_feedback()">Feedback</a>
                </li>
                <li class = "divider"></li>
                <li>
                  <a href="/signout">
                    Logout
                  </a>
                </li>
              </ul>
            </li>
            <!-- menu for admin -->
            <% if signed_in_admin? %>
              <li class= "divider-vertical"></li>
              <li class= "dropdown">
                <a class = "dropdown-toggle" data-toggle= "dropdown" href= "#">
                  Admin
                  <b class = "caret"></b>
                </a>
                <ul class= "dropdown-menu">
                  <li><%= link_to :Crawls, admin_crawles_path %></li>
                  <li><%= link_to :ErrorMessages, admin_error_messages_path %></li>
                  <li><%= link_to "Submitted URLs", admin_submitted_urls_path %></li>
                </ul>
              </li>
            <% end %>
          <% else %>
            <li class="divider-vertical"></li>
            <li style="font-weight: bold; font-size: 16px;">
              <%= form_tag(signup_path, :method => "GET", :style=>"margin: 0;") do  %>
                <button type="submit" class="btn btn-success" ><%= t(:page_header_signup) %></button>
              <% end %>
            </li>
            <li class="divider-vertical"></li>
            <li>
              <%= form_tag(signin_path, :method => "GET", :style=>"margin: 0;") do  %>
                <button type="submit" class="btn" ><%= t(:page_header_signin) %></button>
              <% end %>
            </li>
          <% end %>

          <% if 1 == 2 %>
            <li class="divider-vertical"></li>
            <li>
              <a href="#"><span class = "flag de"></span></a>
            </li>
            <li class="divider-vertical"></li>
            <li>
              <a href = "#"><span class = "flag gb on"></span></a>
            </li>
          <% end %>

        </ul>
      </div>

    </div>
  </div>
</header>
